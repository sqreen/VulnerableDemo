<header class="row">
  <img src="header.jpg" alt="">
</header>

<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>

    <div class="col-md-3">
      <form class="navbar-form" role="search" action="/characters/1" method="get">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Type here">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
      </form>

      <div class="well">
        <h4>
          <%= link_to raw('<i class="fa fa-plus-circle fa3"></i> Add your character'), new_character_path %>
        </h4>
      </div>
      <div class="well">
        <h4>Star Wars Characters of the month</h4>
        <p>The character of the month has not been elected yet. Please come back later!</p>
      </div>
      <div class="well">
        <h4>
          <i class="fa fa-twitter"></i>
          Last tweeted characters
        </h4>
        <p>None yet!</p>
      </div>
    </div>

    <div class="col-md-9 char-list">
      <h2 class="col-lg-12">Vote for your favorite character !</h2>
      <% @cows.each do |cow| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
          <div class="card-image">
            <img src="<%= cow.url %>" class="img-responsive" alt="...">
          </div>
          <div class="card-content">
            <h3><%= cow.name %></h3>
            <p><%= render partial: 'score', :locals => {cow: cow} %></p>
            <p class="desc"><%= cow.description %></p>
            <p class="date"><%= cow.birthday %></p>

            <div class="btn-ctn">
              <%= link_to 'Details', character_path(cow), :class => "detail" %>
              <%= link_to raw('<i class="fa fa-thumbs-o-up"></i> Vote'), "#", :class => "vote" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
